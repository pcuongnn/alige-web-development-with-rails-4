<%= simple_form_for @order do |f| %>
  <%= f.input :name, placeholder: 'Your name' %>
  <%= f.input :address, placeholder: 'Your address',cols: 6 %>
  <%= f.input :email, placeholder: 'Your email' %>
  <%= f.input :pay_type, collection: Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
  <%= f.button :submit, 'Place Order'%>
<% end %>
